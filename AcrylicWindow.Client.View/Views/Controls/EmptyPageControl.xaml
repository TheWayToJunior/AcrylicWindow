<UserControl x:Class="AcrylicWindow.Views.Controls.EmptyPageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcrylicWindow.Views.Controls"
             Height="385"
             FontFamily="Arial"
             FontWeight="Medium"
             Foreground="#727272"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Image Source="{StaticResource DevImage}"
               Width="350"
               Height="300"/>

        <TextBlock Grid.Row="1" 
                   FontSize="18"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Text="This page is being developed"/>
    </Grid>
</UserControl>
